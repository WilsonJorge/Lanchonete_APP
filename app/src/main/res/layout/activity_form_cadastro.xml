<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".form_cadastro">

    <TextView
        android:id="@+id/title_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_tela_cadastro"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/conteirer_componentes"
        style="@style/ContainerComponentes"
        app:layout_constraintTop_toBottomOf="@id/title_cadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edit_nome"
        style="@style/Edit_Text"
        android:hint="Enter your name"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/conteirer_componentes"
        app:layout_constraintStart_toStartOf="@id/conteirer_componentes"
        app:layout_constraintEnd_toEndOf="@id/conteirer_componentes"/>

    <EditText
        android:id="@+id/edit_email"
        style="@style/Edit_Text"
        android:hint="Enter your email"
        android:drawableRight="@drawable/ic_email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/edit_nome"
        app:layout_constraintStart_toStartOf="@id/conteirer_componentes"
        app:layout_constraintEnd_toEndOf="@id/conteirer_componentes"/>

    <EditText

        android:id="@+id/edit_password"
        style="@style/Edit_Text"
        android:hint="Enter your password"
        android:inputType="numberDecimal"
        android:drawableRight="@drawable/ic_eye"

        app:layout_constraintTop_toBottomOf="@id/edit_email"
        app:layout_constraintStart_toStartOf="@id/conteirer_componentes"
        app:layout_constraintEnd_toEndOf="@id/conteirer_componentes"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registo"
        style="@style/Button"














































































        android:text="Register"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/conteirer_componentes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
        .</androidx.constraintlayout.widget.ConstraintLayout>